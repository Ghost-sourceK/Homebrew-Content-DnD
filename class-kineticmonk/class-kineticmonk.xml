	<!-- Kinetic Monk Features -->
    <element name="Unarmored Defence" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_UNARMORED_DEFENCE">
        <description>
            <p>While you aren't wearing armor or wielding a shield, your base AC equals 10 + your Dexterity modifier + your Constitution modifier.</p>
        </description>
    </element>

    <element name="Martial Arts" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_MARTIAL_ARTS">
        <description>
            <p>You can use Dexterity instead of Strength for unarmed strikes and Kinetic Monk weapons.</p>
            <p>You can roll a d6 in place of normal damage for unarmed strikes or Kinetic Monk weapons (increases with level).</p>
        </description>
    </element>

    <element name="Kinetic Charges" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_KINETIC_CHARGES">
        <description>
            <p>When you hit with an unarmed strike, gain 1 Kinetic Charge (max 1 minute duration). Spend charges for:</p>
            <ul>
                <li>Follow-Up Strike: Extra attack with cumulative -2 penalty per consecutive strike.</li>
                <li>Burst Movement: Dash without using any action.</li>
            </ul>
        </description>
    </element>

    <element name="Monastic Traditions" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_MONASTIC_TRADITIONS">
        <description>
            <p>Choose a tradition (Combat, Speed, Elusion) at 3rd level. Gain features at 3rd, 6th, and 13th levels.</p>
        </description>
    </element>

    <element name="Extra Speed" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_EXTRA_SPEED">
        <description>
            <p>At 3rd level, your speed increases by 10 feet while unarmored and not wielding a shield. Increases with level.</p>
        </description>
    </element>

    <element name="Ability Score Improvement" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_ABILITY_SCORE_IMPROVEMENT">
        <description>
            <p>Increase one ability score by 2 or two scores by 1 at levels 4, 8, 10, 12, 16, 19 (max 20).</p>
        </description>
    </element>

    <element name="Extra Attack" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_EXTRA_ATTACK">
        <description>
            <p>At 5th level, attack twice instead of once when taking the Attack action.</p>
        </description>
    </element>

    <element name="Kinetic Hits" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_KINETIC_HITS">
        <description>
            <p>At 5th level, unarmed strikes can deal Force damage instead of their normal damage type.</p>
        </description>
    </element>

    <element name="Free Fall" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_FREE_FALL">
        <description>
            <p>At 6th level, you gain resistance to falling damage and generate 1 Kinetic Charge when taking falling damage.</p>
        </description>
    </element>

    <element name="Improved Strikes" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_IMPROVED_STRIKES">
        <description>
            <p>At 7th level, +1 to attack rolls (increases at 11th and 15th levels).</p>
        </description>
    </element>

    <element name="Parry" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_PARRY">
        <description>
            <p>Use reaction to reduce damage by 1d10 + Kinetic Monk level. Spend 1 Kinetic Charge to maximize the roll (short rest uses = Proficiency Bonus).</p>
        </description>
    </element>

    <element name="Evasion" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_EVASION">
        <description>
            <p>At 9th level, take no damage on successful Dex saves, half on failure.</p>
        </description>
    </element>

    <element name="Energy Conversion" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_ENERGY_CONVERSION">
        <description>
            <p>At 9th level, once per long rest, add Dex modifier to a saving throw after seeing the result.</p>
        </description>
    </element>

    <element name="Personal Reserve" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_PERSONAL_RESERVE">
        <description>
            <p>At 11th level, regain 3 Kinetic Charges once per short rest when at 0 charges.</p>
        </description>
    </element>

    <element name="Long Range Channeling" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_LONG_RANGE_CHANNELING">
        <description>
            <p>At 14th level, unarmed attack range increases by 5 feet.</p>
        </description>
    </element>

    <element name="Advanced Parry" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_ADVANCED_PARRY">
        <description>
            <p>At 15th level, can maximize Parry regardless of damage type.</p>
        </description>
    </element>

    <element name="Total Control" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_TOTAL_CONTROL">
        <description>
            <p>At 18th level, gain multiple temporary effects when gaining multiple Kinetic Charges in a turn.</p>
        </description>
    </element>

    <element name="Mind and Body" type="Class Feature" source="Kinetic Monk" id="ID_KINETIC_MONK_FEATURE_MIND_BODY">
        <description>
            <p>At 20th level, attack three times instead of twice when taking the Attack action.</p>
        </description>
    </element>

